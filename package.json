{
  "name": "@gael-boyenval/migrator",
  "version": "1.0.0-alpha.1",
  "description": "A powerful, extensible TypeScript CLI tool for automated code migrations with support for interactive user choices, batch processing, and plugin-based architecture.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "migrator": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "predev": "npm link",
    "dev": "tsc --watch",
    "postdev": "npm unlink -g",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm run build",
    "postpack": "npm run clean",
    "publish:package": "./scripts/publish.sh",
    "version:prerelease": "npm version prerelease",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "cli",
    "typescript",
    "migrator",
    "migration",
    "code-migration",
    "automation",
    "css",
    "scss",
    "plugin",
    "batch-processing",
    "interactive"
  ],
  "author": "Gael Boyenval <gael.boyenval@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gael-boyenval/migrator.git"
  },
  "bugs": {
    "url": "https://github.com/gael-boyenval/migrator/issues"
  },
  "homepage": "https://github.com/gael-boyenval/migrator#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "chalk": "^5.0.0",
    "ora": "^8.0.0",
    "boxen": "^7.0.0"
  }
}
